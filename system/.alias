### GIT COMMANDS ###

alias gc="git clone"
alias gi="git init"
alias gpom="git push origin master"
alias gp="git push"
alias gs="git status"
alias ga="git add"
alias gaa="git add ."
alias gb="git branch"

### CMD NAVIGATION ###

alias reload="source ~/.bash_profile && echo 'Terminal has reloaded'"
alias ..="cd .."
alias ...="cd ../.."

alias ls="ls -G"
alias la="ls -aG"
alias ll="ls -lG"
alias lla="ll -a"

### GRADLE COMMANDS ###

alias gri="./gradlew idea"
alias grsa="./gradlew spotlessApply"
alias yi="yarn install"
alias ys="yarn start"